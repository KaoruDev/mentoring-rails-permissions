<h1>Edit Post</h1>

<%= form_for @post do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
  </p>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %><br>
  </p>

  <p>
    <%= f.collection_check_boxes :collaborator_ids, User.all, :id, :email %>
  </p>

  <%= f.submit %>
<% end %>

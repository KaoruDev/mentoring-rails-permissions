<h1>Edit Post</h1>
<p>by: <%= @post.user.email %></p>

<%= form_for @post do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
  </p>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body, rows: 10, cols: 50 %><br>
  </p>

  <p>
    <%= f.collection_check_boxes :collaborator_ids, User.all, :id, :email %>
  </p>

  <%= f.submit %>
<% end %>

<p>
  <%= link_to :back, posts_path %>
</p>
